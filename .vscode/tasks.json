{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "dependsOn": [
        "cmake"
      ],
      "command": "ninja -C 'build' ",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "make...",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "cmake",
      "command": " cmake -B 'build' -G 'Ninja' ",
      "problemMatcher": []
    },
    {
      "label": "jlinkserver",
      "type": "shell",
      "command": "JLinkGDBServer -singlerun  -if swd -port 50000 -swoport 50001 -telnetport 50002 -device stm32f407ig -rtttelnetport 19021",
      "dependsOn": [
        "build"
      ],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "line": 1,
              "column": 1,
              "message": 1
            }
          ],
         "background": {
            "activeOnStart": true,
            "beginsPattern": { "regexp": "." },
            "endsPattern": { "regexp": "^.*$" }
          }
        }
      ]
    },
    {
      "label": "open-RTT",
      "type": "shell",
       "dependsOn": [
        "jlinkserver"
      ],
      "command": "JLinkRTTClient",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
     "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "line": 1,
              "column": 1,
              "message": 1
            }
          ],
         "background": {
            "activeOnStart": true,
            "beginsPattern": { "regexp": "." },
